@using System.Globalization
@model ViewModel

@{
    TempData["Title"] = "Detalhamento da categoria";
}

<div class="main-content container-fluid">
    <div class="page-title">
        <div class="row">
            <form>
                <div class="row match-height">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Detalhamento de Categoria e Produtos</h4>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3 mb-3" readonly>
                                        <b>Código</b> @Html.DisplayFor(model => model.Categoria.CatId)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-3 mb-3">
                                        <h3 class="mb-4">@Html.DisplayFor(model => model.Categoria.CatNome)</h3>
                                    </div>

                                    <div class="col-sm-3 mb-3">
                                        <button class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Categoria.CatId"><i class="bi bi-pencil-square mx-2"></i>Atualizar categoria</button>
                                    </div>
                                    <hr/>
                                    
                                </div>

                                @foreach (var produto in Model.Produtos)
                                {
                                    <div class="row">
                                        <div class="col-sm-3 mb-3">                                            
                                            <b>Código</b> @Html.DisplayFor(model => produto.ProId)
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-3 mb-3">
                                            <div class="form-group position-relative has-icon-left">
                                                <h3>@Html.DisplayFor(Model => produto.ProNome)</h3>
                                            </div>
                                        </div>

                                        <div class="col-sm-4 mb-3">
                                            <a class="btn btn-warning btn-sm mx-1" asp-controller="Produto" asp-action="Edit" asp-route-proId="@produto.ProId" asp-route-catId="@produto.CatId"><i class="bi bi-pencil-square mx-2"></i>Atualizar produto</a>
                                            <a class="btn btn-danger btn-sm mx-1" onclick="displayAlert(@produto.ProId, event)" asp-controller="Produto" asp-action="Delete" asp-route-id="@produto.ProId">Excluir</a>
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-sm-3 mb-3">
                                            <div class="form-group position-relative">
                                                @if (!string.IsNullOrEmpty(produto.ProImagemUrl))
                                                {
                                                    <img src="~/images/@produto.ProImagemUrl" alt="Imagem do Produto" class="img-fluid"/>
                                                }
                                                else
                                                {
                                                    <p>Imagem não disponível</p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-sm-3 mb-3">
                                            <h6>Descrição do produto</h6>
                                            <div class="form-group position-relative">
                                                @Html.DisplayFor(Model => produto.ProDesc)
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-sm-3 mb-3">
                                            <h6>Valor</h6>
                                            <div class="form-group position-relative">
                                                <span>@produto.ProPreco.ToString("C", CultureInfo.CreateSpecificCulture("pt-BR"))</span>
                                            </div>
                                        </div>

                                        <div class="col-sm-3 mb-3">
                                            <h6>Quantidade em Estoque</h6>
                                            <div class="form-group position-relative">
                                                @Html.DisplayFor(Model => produto.ProQuantidadeEmEstoque)
                                            </div>
                                        </div>
                                    </div>
                                    <hr/>
                                }

                                <div class="row">
                                    <div class="col-sm">
                                        <a type="button" class="btn btn-danger" asp-controller="Categoria" asp-action="Index">Voltar</a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @if (TempData["MessageSuccess"] != null)
    {
        <script>Swal.fire('Sucesso', '@TempData["MessageSuccess"]', 'success');</script>
    }

    @if (TempData["MessageErro"] != null)
    {
        <script>Swal.fire('Erro', '@TempData["MessageError"]', 'error');</script>
    }

    <script>
            function displayAlert(ProId, event) {
                event.preventDefault();  // Evita o comportamento padrão do link
    
                Swal.fire({
                    title: "Tem certeza?",
                    text: "Você não será capaz de reverter isso!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Sim!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Se o usuário confirmar, redirecione para a ação de exclusão
                        window.location.href = event.target.href;
                    }
                });
            }
        </script>
}