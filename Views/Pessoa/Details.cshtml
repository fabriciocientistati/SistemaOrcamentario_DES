@using System.Globalization
@model ViewModel

@{
    TempData["Title"] = "Detalhamento do cliente";
}

<div class="main-content container-fluid">
    <div class="page-title">
        <div class="row">
            <form>
                <div class="row match-height">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Detalhamento do Cliente</h4>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3 mb-3" readonly>
                                        <b>Código</b> @Html.DisplayFor(model => model.Pessoa.PesId)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-3 mb-3">
                                        <h3 class="mb-4">@Html.DisplayFor(model => model.Pessoa.PesNome)</h3>
                                    </div>

                                    <div class="col-sm-3 mb-3">
                                        <button class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Pessoa.PesId"><i class="bi bi-pencil-square mx-2"></i>Atualizar cliente</button>
                                    </div>
                                    <hr/>

                                    <div class="col-sm-3 mb-3 mt-2">
                                        <h6>Data de inclusão</h6>
                                        <div class="form-group position-relative has-icon-right">
                                            <span>@Model.Pessoa.PesIncEm.ToShortDateString()</span>
                                            <i class="bi bi-calendar-date"></i>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-3 mb-3">
                                        <h6>Número telefone</h6>
                                        <div class="form-group position-relative has-icon-left">
                                            @Html.DisplayFor(Model => Model.Pessoa.PesNumCelular)
                                            <i class="bi bi-telephone-fill"></i>
                                        </div>
                                    </div>

                                    <div class="col-sm-3 mb-3">
                                        <h6>Número telefone</h6>
                                        <div class="form-group position-relative has-icon-left">
                                            @Html.DisplayFor(Model => Model.Pessoa.PesNumTelefone)
                                            <i class="bi bi-telephone-fill"></i>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-3 mb-3">
                                        <h6>CPF</h6>
                                        <div class="form-group position-relative has-icon-left">
                                            @Html.DisplayFor(Model => Model.Pessoa.PesCpf)
                                            <i class="bi bi-box-arrow-right"></i>
                                        </div>
                                    </div>

                                    <div class="col-sm-3 mb-3">
                                        <h6>CNPJ</h6>
                                        <div class="form-group position-relative has-icon-left">
                                            @Html.DisplayFor(Model => Model.Pessoa.PesCnpj)
                                            <i class="bi bi-box-arrow-right"></i>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6 mb-4">
                                        <h6>E-mail</h6>
                                        <div class="form-group position-relative has-icon-left">
                                            @Html.DisplayFor(Model => Model.Pessoa.PesEmail)
                                            <i class="bi bi-envelope"></i>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <h3 class="mb-4">Endereço</h3>
                                    <div class="col-sm-3 mb-3">
                                        <h6>CEP</h6>
                                        <div class="form-group position-relative has-icon-left">
                                            @Html.DisplayFor(Model => Model.Pessoa.PesCep)
                                            <i class="bi bi-house"></i>
                                        </div>
                                    </div>
                                    <div class="col-sm-3 mb-3">
                                        <h6>Número</h6>
                                        <div class="form-group position-relative">
                                            @Html.DisplayFor(Model => Model.Pessoa.PesNumero)
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-3 mb-3">
                                        <h6>Rua</h6>
                                        <div class="form-group position-relative">
                                            @Html.DisplayFor(Model => Model.Pessoa.PesRua)
                                        </div>
                                    </div>

                                    <div class="col-sm-3 mb-3">
                                        <h6>Bairro</h6>
                                        <div class="form-group position-relative">
                                            @Html.DisplayFor(Model => Model.Pessoa.PesBairro)
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-3 mb-3">
                                        <h6>Estado</h6>
                                        <div class="form-group position-relative">
                                            @Html.DisplayFor(Model => Model.Pessoa.PesEstado)
                                        </div>
                                    </div>

                                    <div class="col-sm-3 mb-5">
                                        <h6>Cidade</h6>
                                        <div class="form-group position-relative">
                                            @Html.DisplayFor(Model => Model.Pessoa.PesCidade)
                                        </div>
                                    </div>
                                </div>
                                <hr/>
                                @foreach (var orcamento in Model.Orcamento)
                                {
                                    <div class="row">
                                        <div class="col-sm-3 mb-3">
                                            <h3 class="mb-4">Orçamento</h3>
                                        </div>

                                        <div class="col-sm-4 mb-3">
                                            <a class="btn btn-primary btn-sm mx-1" asp-controller="Orcamento" asp-action="Edit" asp-route-orcId="@orcamento.OrcId" asp-route-pesId="@orcamento.PesId"><i class="bi bi-pencil-square mx-2"></i>Atualizar orçamento</a>
                                            <a class="btn btn-danger btn-sm mx-1" onclick="displayAlert(@orcamento.OrcId, event)" asp-controller="Orcamento" asp-action="Delete" asp-route-id="@orcamento.OrcId">Excluir</a>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="col-sm-3 mb-3">
                                            <h6>Data de inclusão</h6>
                                            <div class="form-group position-relative has-icon-left">
                                                <span>@orcamento.OrcIncEm.ToShortDateString()</span>
                                                <i class="bi bi-house"></i>
                                            </div>
                                        </div>

                                        <div class="col-sm-3 mb-3">
                                            <h6>Forma de pagamento</h6>
                                            <div class="form-group position-relative">
                                                @Html.DisplayFor(Model => orcamento.OrcTipoPagamento)
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-sm-3 mb-3">
                                            <h6>Forma de entrega</h6>
                                            <div class="form-group position-relative">
                                                @Html.DisplayFor(Model => orcamento.OrcTipoEntrega)
                                            </div>
                                        </div>

                                        <div class="col-sm-3 mb-3">
                                            <h6>Valor</h6>
                                            <div class="form-group position-relative">
                                                <span>@orcamento.OrcPreco.ToString("C", CultureInfo.CreateSpecificCulture("pt-BR"))</span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-sm-3 mb-3">
                                            <h6>Observações</h6>
                                            <div class="form-group position-relative">
                                                @Html.DisplayFor(Model => orcamento.OrcObservacao)
                                            </div>
                                        </div>

                                        <div class="col-sm-3 mb-3">
                                            <h6>Descrição</h6>
                                            <div class="form-group position-relative">
                                                @Html.DisplayFor(Model => orcamento.OrcDesc)
                                            </div>
                                        </div>
                                    </div>
                                    <hr/>
                                }

                                <div class="row">
                                    <div class="col-sm">
                                        <a type="button" class="btn btn-danger" asp-controller="Pessoa" asp-action="Index">Voltar</a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @if (TempData["MessageSuccess"] != null)
    {
        <script>Swal.fire('Sucesso', '@TempData["MessageSuccess"]', 'success');</script>
    }

    @if (TempData["MessageErro"] != null)
    {
        <script>Swal.fire('Erro', '@TempData["MessageError"]', 'error');</script>
    }

    <script>
            function displayAlert(orcId, event) {
                event.preventDefault();  // Evita o comportamento padrão do link
    
                Swal.fire({
                    title: "Tem certeza?",
                    text: "Você não será capaz de reverter isso!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Sim!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Se o usuário confirmar, redirecione para a ação de exclusão
                        window.location.href = event.target.href;
                    }
                });
            }
        </script>
}